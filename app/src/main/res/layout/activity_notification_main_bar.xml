<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.smec.NotificationMainBar">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="head of the department"
        android:id="@+id/button9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:onClick="onClickHeadOfTheDepartmentLoginListener"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="student notification"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:layout_marginTop="50dp"
        android:onClick="onClickNotificationStudentBarListener"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="student hub"
        android:id="@+id/button51"
        android:layout_below="@+id/button10"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickStudentHubListener"/>
</RelativeLayout>
