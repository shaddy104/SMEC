<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shadrach.smec.EceLabSchedule">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="first year"
        android:id="@+id/button26"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="second year"
        android:id="@+id/button27"
        android:layout_below="@+id/button26"
        android:layout_alignRight="@+id/button26"
        android:layout_alignEnd="@+id/button26"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="third year"
        android:id="@+id/button28"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button27"
        android:layout_alignEnd="@+id/button27"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fourth year"
        android:id="@+id/button29"
        android:layout_below="@+id/button28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
